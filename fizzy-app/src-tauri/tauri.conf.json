{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Fizzy",
  "version": "1.0.0",
  "identifier": "com.fizzyboard.desktop",
  "build": {
    "frontendDist": "../ui"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Fizzy",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": ["app", "dmg"],
    "macOS": {
      "minimumSystemVersion": "10.15"
    }
  }
}
